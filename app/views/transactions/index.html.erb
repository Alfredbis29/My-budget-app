<p style="color: green"><%= notice %></p>


<div id="transactions" class="mt-8 mb-4">
<button class="bg-slate-500 hover:bg-green-700 text-white font-bold py-2 px-8 rounded ml-8 mb-2">
<%= link_to "Back",  categorys_path%>
</button>
  <% @transactions.each do |transaction| %>
    <%= render transaction %>
    <p class="m-4">
      <%= link_to "Show this transaction", category_transaction_path(id: transaction.id), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded m-8" %>
    </p>
  <% end %>
</div>

<%= link_to "New transaction", new_category_transaction_path, class: "bg-green-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4" %>
